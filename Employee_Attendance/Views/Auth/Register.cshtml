        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h1>تسجيل جديد</h1>
            <div class="form-row">
                <div class="col">
                    <input type="text" asp-for="UserName" class="form-control" />
